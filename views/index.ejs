<%- include('header') %>
    <form method="post" class="js-index" action="/callback">
      <div class="js-sign_show">
        <div class="weui-cells weui-cells_form">
          <div class="weui-cell">
            <div class="weui-cell__hd">
              <label class="weui-label">姓 名</label>
            </div>
            <div class="weui-cell__bd">
              <input type="text" name="username" class="weui-input text_ltr js-sign_username" placeholder="请输入用户名"/>
            </div>
          </div>
          <div class="weui-cell">
            <div class="weui-cell__hd">
              <label class="weui-label">手机号</label>
            </div>
            <div class="weui-cell__bd">
              <input type="number" pattern="[0-9]{11}" name="phone" placeholder="请输入手机号" class="js-sign_phone weui-input text_ltr"/>
            </div>
          </div>
        </div>
        <div class="weui-btn-area">
          <a href="javascript:;" class="weui-btn weui-btn_primary js-getCapture">获取验证码</a>
        </div>
      </div>
      <div class="js-sign_last" style="display:none">
        <div class="weui-cells js-news" data-phone="" data-username="">
          <div class="weui-cell">
            <div class="weui-cell__bd">
              <input type="text" class="weui-input js-capture" placeholder="请输入验证码" >
            </div>
            <div class="weui-cell__ft">
              <a href="javascript:;" class="weui-vcode-btn js-cap_btn">点击发送验证码</a>
            </div>
          </div>
        </div>
        <div class="weui-btn-area">
          <input type="submit" class="weui-btn weui-btn_primary js-sign_in" value="注册" />
        </div>
      </div>
    </form>
<%- include('footer')%>
